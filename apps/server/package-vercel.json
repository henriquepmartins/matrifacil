{
  "name": "matrifacil-server",
  "version": "1.0.0",
  "type": "commonjs",
  "scripts": {
    "build": "cd ../../packages/db && bun run build && cd ../../apps/server && bun run build && bun run build:serverless",
    "build:serverless": "esbuild src/handlers/vercel.ts --bundle --format=cjs --outfile=api/serverless.js --platform=node --target=node18 --external:pg --external:drizzle-orm --external:dotenv --external:zod --external:bcrypt --external:cookie-parser --external:cors --external:express --external:jsonwebtoken --external:pdfkit --external:uuid --external:@scalar/api-reference --external:@scalar/express-api-reference --external:csv-stringify --external:ioredis --external:bullmq --external:@supabase/supabase-js --external:multer --resolve-extensions=.js,.ts --alias:@matrifacil-/db=../../packages/db/dist/index.js --banner:js='// @ts-nocheck'",
    "start": "node api/serverless.js",
    "vercel-build": "cd ../../packages/db && bun run build && cd ../../apps/server && bun run build && bun run build:serverless"
  },
  "dependencies": {
    "@matrifacil-/db": "file:../../packages/db",
    "@scalar/api-reference": "^1.38.1",
    "@scalar/express-api-reference": "^0.8.22",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csv-stringify": "^6.6.0",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "pdfkit": "^0.17.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.13.11",
    "@types/pdfkit": "^0.17.3",
    "tsdown": "0.15.6",
    "typescript": "^5"
  }
}
