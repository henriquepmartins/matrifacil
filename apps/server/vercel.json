{
  "version": 2,
  "buildCommand": "cd ../../packages/db && bun run build && cd ../../apps/server && bun run build && bun run build:serverless",
  "builds": [
    {
      "src": "api/serverless.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/**", "../../packages/db/dist/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/serverless.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "api/serverless.js": {
      "maxDuration": 30
    }
  }
}
